# Financial Data Processor Frontend Environment Configuration
# Copy this file to frontend.env.local and modify as needed

# Service Configuration
SERVICE_NAME=finance-frontend
FRONTEND_DIR=app/static

# Server Configuration
HOST=0.0.0.0
PORT=3000
BIND_ADDRESS=0.0.0.0

# File Paths
PID_FILE=logs/finance-frontend.pid
LOG_FILE=logs/finance-frontend.log

# Python HTTP Server Configuration
HTTP_SERVER_PORT=3000
HTTP_SERVER_DIRECTORY=app/static

# Development Settings
DEBUG=true
ENVIRONMENT=development

# CORS Settings (if needed)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# Static File Settings
STATIC_URL_PREFIX=/static
STATIC_FILES_DIR=app/static 