# Financial Data Processor Backend Environment Configuration
# Copy this file to backend.env.local and modify as needed

# Service Configuration
SERVICE_NAME=finance-backend
APP_MODULE=app.api.main:app

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# Python Configuration
PYTHON_PATH=python3
# Uncomment to use virtual environment
# PYTHON_PATH=venv/bin/python

# File Paths
PID_FILE=logs/finance-backend.pid
LOG_FILE=logs/finance-backend.log

# Environment Variables
PYTHONPATH=.
FINANCE_ENV=development

# Uvicorn Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=true
UVICORN_LOG_LEVEL=info
UVICORN_WORKERS=1

# Development Settings
DEBUG=true
ENVIRONMENT=development 